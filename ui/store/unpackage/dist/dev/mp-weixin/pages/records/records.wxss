.records {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #F7F7F7;
}
.records .nav-top {
  position: relative;
  -webkit-box-shadow: 0 0 20rpx #999999;
          box-shadow: 0 0 20rpx #999999;
  background-color: #FFFFFF;
}
.records .nav-top .cell-name {
  display: inline-block;
  width: 16%;
  padding: 10rpx 0 0;
  text-align: center;
  margin: 0 2%;
}
.records .nav-top .cell-name .select {
  color: #5F4534;
  border-bottom: 4rpx solid #5F4534;
}
.records .nav-top .line-cell {
  position: absolute;
  left: 2%;
  bottom: 0;
  width: 120rpx;
}
.records .nav-top .line-cell .active {
  margin: 0 auto;
  width: 70%;
  height: 4rpx;
  background-color: #5F4534;
}
.records .swiper-content {
  position: absolute;
  width: 100%;
  top: 70rpx;
  bottom: 0;
  overflow: hidden;
  overflow-y: scroll;
}
.records .swiper-content .card-item {
  margin: 20rpx 0;
  padding-left: 20rpx;
  background-color: #FFFFFF;
}
.records .swiper-content .card-item .title-cell {
  padding: 10rpx 20rpx 10rpx 0;
  border-bottom: 2rpx solid #E4E7ED;
}
.records .swiper-content .card-item .info-cell {
  padding: 10rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.records .swiper-content .card-item .info-cell .img-cell {
  position: relative;
  width: 200rpx;
  height: 170rpx;
}
.records .swiper-content .card-item .info-cell .img-cell image {
  position: absolute;
  width: 100%;
  height: 100%;
}
.records .swiper-content .card-item .info-cell .text-cell {
  padding-left: 20rpx;
}
.records .swiper-content .card-item .info-cell .text-cell .type {
  color: #C0C4CC;
}
.records .swiper-content .card-item .sum-cell {
  text-align: right;
  padding: 10rpx 20rpx 10rpx 0;
}
.records .swiper-content .card-item .sum-cell .price {
  font-size: 38.4rpx;
}
.records .swiper-content .card-item .btn-cell {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  padding: 10rpx 20rpx 10rpx 0;
}
.records .swiper-content .card-item .btn-cell .cancel {
  margin: auto 10rpx;
  font-size: 28rpx;
}
.records .swiper-content .card-item .btn-cell .pay {
  margin: auto 10rpx;
  font-size: 28rpx;
  color: #4399fc;
}


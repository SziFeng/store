  -webkit-box-shadow: 0 0 10rpx #CCCCCC;
          box-shadow: 0 0 10rpx #CCCCCC;
}
.order .summit-btn .left {
  padding-left: 20rpx;
  color: #666666;
}
.order .summit-btn .left .money {
  color: #EA4D4F;
  font-size: 48rpx;
}
.order .summit-btn .right {
  background-color: #EA4D4F;
  width: 260rpx;
  height: 100%;
}
.order .summit-btn .right .btn-cell {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;

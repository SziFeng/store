.order {
  position: absolute;
  width: 100%;
  top: 0;
  bottom: 100rpx;
  background-color: #F7F7F7;
}
.order .top-address {
  background-color: #FFFFFF;
  padding: 10rpx 20rpx;
}
.order .top-address .left .text-cell {
  padding-left: 20rpx;
}
.order .top-address .left .text-cell .info {
  font-size: 38rpx;
}
.order .top-address .left .text-cell .info .tel {
  font-size: 34rpx;
  padding-left: 20rpx;
}
.order .top-address .left .text-cell .address {
  font-size: 36rpx;
  color: #666666;
}
.order .top-address .right .iconright {
  font-size: 40rpx;
}
.order .address-line {
  position: relative;
  width: 100%;
  height: 6rpx;
  overflow: hidden;
}
.order .address-line image {
  position: absolute;
  width: 100%;
  height: 6rpx;
}
.order .store-item {
  background-color: #FFFFFF;
  margin-top: 20rpx;
}
.order .store-item .title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 10rpx 20rpx;
  border-bottom: 2rpx solid #CCCCCC;
}
.order .store-item .title .img-cell {
  position: relative;
  width: 70rpx;
  height: 70rpx;
  overflow: hiddren;
  border-radius: 50%;
}
.order .store-item .title .img-cell image {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.order .store-item .title .name-cell {
  font-size: 32rpx;
  padding-left: 20rpx;
}
.order .store-item .card {
  padding: 10rpx 20rpx 20rpx;
}
.order .store-item .card .card-cell {
  padding-top: 10rpx;
}
.order .store-item .card .card-cell .card-img-cell {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
  border-radius: 10rpx;
}
.order .store-item .card .card-cell .card-img-cell image {
  position: absolute;
  width: 100%;
  height: 100%;
}
.order .store-item .card .card-cell .card-text-cell {
  -webkit-box-flex: 5;
